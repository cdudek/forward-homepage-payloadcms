@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-size: unset;
    font-weight: unset;
  }

  :root {
    --font-fustat: 'Fustat', sans-serif;
    --font-weight: 200;

    /* Semantic Colors */
    --semantic-background-primary: 0 0% 100%;
    --semantic-background-secondary: 0 0% 96%;
    --semantic-background-tertiary: 220 33% 6%;

    --semantic-border-primary: 240 6% 80%;

    --semantic-text-primary: 220 33% 6%;
    --semantic-text-secondary: 220 9% 46%;
    --semantic-text-tertiary: 220 9% 66%;
    --semantic-text-inactive: 220 9% 76%;
    --semantic-text-alternate-primary: 0 0% 0%;
    --semantic-text-alternate-secondary: 0 0% 0%;

    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;
    --input: 214.3 31.8% 91.4%;
    --ring: var(--semantic-text-primary);
    --radius: 0.2rem;

    /* Brand Colors */

    /* Neutral Colors */
    --color-black: 216 100% 4%; /* #0A0E15 */
    --color-white: 0 0% 100%; /* #FFFFFF */
    --color-grey-xxlight: 0 0% 98%; /* #FCFAFA */
    --color-grey-xlight: 0 0% 96%; /* #F7F3F3 */
    --color-grey-light: 0 0% 94%; /* #F0ECEC */
    --color-grey: 0 0% 82%; /* #D2CFCF */
    --color-grey-dark: 0 0% 38%; /* #636161 */
    --color-grey-xdark: 0 0% 19%; /* #313131 */
    --color-grey-xxdark: 0 0% 12%; /* #1F1F1F */
    /* System Colors */
    --color-success: 153 71% 33%; /* #027A48 */
    --color-success-light: 153 71% 94%; /* #ECFDF3 */
    --color-error: 0 69% 51%; /* #B42318 */
    --color-error-light: 0 69% 94%; /* #FEF3F2 */

    --success: 196 52% 74%;
    --warning: 34 89% 85%;
    --error: 10 100% 86%;

    --gradient-start: var(--color-purple);
    --gradient-middle: var(--color-red);
    --gradient-end: var(--color-orange);

    --brand-dark: var(--semantic-background-tertiary);

    /* Legacy variables mapped to semantic colors */

    --card: var(--semantic-background-secondary);
    --card-foreground: var(--semantic-text-primary);

    --popover: var(--semantic-background-primary);
    --popover-foreground: var(--semantic-text-primary);
    --muted: var(--semantic-background-secondary);
    --muted-foreground: var(--semantic-text-tertiary);
    --accent: var(--semantic-background-secondary);
    --accent-foreground: var(--semantic-text-primary);
    --border: var(--semantic-border-primary);

    /* New tailwind compliant colors */
    --color-purple: var(--color-purple-800);
    --color-purple-50: oklch(97.81% 0.01 318.7);
    --color-purple-100: oklch(95.36% 0.03 317.25);
    --color-purple-200: oklch(90.62% 0.06 317.66);
    --color-purple-300: oklch(83.48% 0.1 319.46);
    --color-purple-400: oklch(74.3% 0.17 319.96);
    --color-purple-500: oklch(64.81% 0.21 319.8);
    --color-purple-600: oklch(56.35% 0.22 320.72);
    --color-purple-700: oklch(49.23% 0.19 321.83);
    --color-purple-800: oklch(43.09% 0.16 322.3); /* #772583; */
    --color-purple-900: oklch(38.55% 0.13 323.16);
    --color-purple-950: oklch(27.63% 0.11 323.37);

    --color-orange: var(--color-orange-400);
    --color-orange-50: oklch(97.19% 0.02 48.56);
    --color-orange-100: oklch(93.67% 0.04 52.69);
    --color-orange-200: oklch(86.82% 0.08 47.81);
    --color-orange-300: oklch(78.72% 0.13 44.58);
    --color-orange-400: oklch(70.36% 0.19 38.04); /* #FF6A39; */
    --color-orange-500: oklch(65.63% 0.23 33.91);
    --color-orange-600: oklch(61.12% 0.23 31.29);
    --color-orange-700: oklch(52.69% 0.21 30.09);
    --color-orange-800: oklch(44.71% 0.17 29.15);
    --color-orange-900: oklch(38.62% 0.14 28.88);
    --color-orange-950: oklch(25.05% 0.09 27.06);

    --color-red: var(--color-red-600);
    --color-red-50: oklch(97.25% 0.01 23.7);
    --color-red-100: oklch(94.24% 0.03 14.88);
    --color-red-200: oklch(89.37% 0.05 15.14);
    --color-red-300: oklch(81.09% 0.1 14.74);
    --color-red-400: oklch(71.84% 0.16 16.08);
    --color-red-500: oklch(63.88% 0.2 18.85);
    --color-red-600: oklch(58.04% 0.21 19.16); /* #DB2845; /* 
    --color-red-700: oklch(50.32% 0.19 19.08);
    --color-red-800: oklch(44.65% 0.16 16.43);
    --color-red-900: oklch(40.44% 0.14 12.48);
    --color-red-950: oklch(26.65% 0.09 15.12);

    --color-black-50: oklch(97.30% 0.01 268.55);
--color-black-100: oklch(94.49% 0.01 262.38);
--color-black-200: oklch(88.14% 0.03 257.03);
