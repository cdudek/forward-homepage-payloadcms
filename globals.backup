  }
}

@layer base {
  * {
    @apply border-semantic-border-primary;
  }
  body {
    @apply bg-semantic-background-primary text-semantic-text-primary flex min-h-[100vh] flex-col;
  }
  p {
    font-weight: 200;
  }
  h3 a {
    font-weight: 300;
  }
}

html {
  opacity: initial;
}
